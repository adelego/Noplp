{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "strict": true,
    "noImplicitReturns": true,
    "outDir": "./lib"
  },
  "exclude": ["**/node_modules/**/*"],
  "include": ["functions/**/*"]
}
